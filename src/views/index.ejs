<div class="page-header"><h2>Welcome</h2></div>
<div class="form-section">
    <form action="/" method="GET">
        <input type="text" name="title" class="form-input" value="<%= searchOptions.title %>">
        <button class="btn-primary" type="submit">Search</button>
    </form>
</div>
<div class="error-message">
    <%- include("./partials/errorMessage.ejs") %>
</div>
<a class="btn-primary" href="/todo/new">Add todo</a>
<div class="todo-section">
    <% todos.forEach(todo => { %>
        <div class="todo-row">
            <li><%= todo.title %></li>
            <a class="btn-primary" href="/todo/<%= todo.id %>">View</a>
            <%- include("./partials/deleteForm", {url: `/todo/${todo.id}`}) %>
        </div>
    <% }) %>
</div>